<% content_for :title do %>
    <%= @slideshow.name %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_mini_stores.backend_slideshows_path %>">
    <i class="fa fa-newspaper-o"></i> <%= t('.slideshows') %>
    </a> / <%= @slideshow.name %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_mini_stores.new_backend_slideshow_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @slideshow.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <%= render 'form', slideshow: @slideshow %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>
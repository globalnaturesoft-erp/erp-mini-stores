<table class="table table-advance table-hover table-striped table-checkable order-column">
    <thead>
        <tr>
            <th width='1%'>
                <%= erp_datalist_check_all %>
            </th>
            <% if get_columns(params).include?("name") %>
                <th class="sortable" sort-by='erp_mini_stores_slideshows.name'>
                    <%= t('.name') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("status") %>
                <th><%= t('status') %></th>
            <% end %>
            <% if get_columns(params).include?("creator") %>
                <th><%= t('creator') %></th>
            <% end %>
            <% if get_columns(params).include?("created_at") %>
                <th class="sortable" sort-by='erp_mini_stores_slideshows.created_at'>
                    <%= t('created_at') %>
                </th>
            <% end %>
            <th width="7%" class="sortable text-nowrap" sort-by='erp_mini_stores_slideshows.custom_order'>
                <%= t('.custom_order') %>
            </th>
            <th width="7%"><%= t('actions') %></th>
        </tr>
    </thead>
    <tbody>
        <% @slideshows.each do |slideshow| %>
            <tr class="odd gradeX">
                <td>
                    <%= erp_datalist_check_row(id: slideshow.id) %>
                </td>
                <% if get_columns(params).include?("name") %>
                    <td>
                        <%= link_to slideshow.name, erp_mini_stores.edit_backend_slideshow_path(slideshow), class: 'title' %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("status") %>
                    <td>
                        <% if slideshow.archived == true %>
                            <%= erp_component('label/danger', {
                                text: t('archived')
                            }) %>
                        <% else %>
                            <%= erp_component('label/success', {
                                text: t('active')
                            }) %>
                        <% end %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("creator") %>
                    <td>
                        <%= erp_component('avatar', {
                            user: slideshow.creator
                        }) %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("created_at") %>
                    <td><%= slideshow.created_at.strftime("%d/%m/%Y") %></td>
                <% end %>
                <td class="text-center text-semibold">
                    <%= erp_datalist_order_column({
                        item: slideshow,
                        move_up_url: erp_mini_stores.move_up_backend_slideshows_path(id: slideshow),
                        move_down_url: erp_mini_stores.move_down_backend_slideshows_path(id: slideshow),
                        sort_by: 'erp_mini_stores_slideshows.custom_order'
                    }) %>
                </td>
                <td class="text-right">
                    <%= erp_datalist_row_actions(
                        [
                            {
                                text: '<i class="fa fa-edit"></i> '+t('edit'),
                                href: erp_mini_stores.edit_backend_slideshow_path(slideshow)
                            },
                            {
                                text: '<i class="fa fa-ban"></i> '+t('archive'),
                                url: erp_mini_stores.archive_backend_slideshows_path(id: slideshow),
                                data_method: 'PUT',
                                hide: slideshow.archived,
                                class: 'ajax-link',
                                data_confirm: t('.archive_confirm')
                            },
                            {
                                text: '<i class="fa fa-check"></i> '+t('unarchive'),
                                url: erp_mini_stores.unarchive_backend_slideshows_path(id: slideshow),
                                data_method: 'PUT',
                                hide: !slideshow.archived,
                                class: 'ajax-link',
                                data_confirm: t('.unarchive_confirm')
                            },
                            {
                                divider: true
                            },
                            {
                                text: '<i class="fa fa-trash"></i> '+t('.delete'),
                                url: erp_mini_stores.backend_slideshow_path(slideshow),
                                data_method: 'DELETE',
                                class: 'ajax-link',
                                data_confirm: t('delete_confirm')
                            }
                        ]
                    ) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<% if @slideshows.empty? %>
    <div class="datalist-empty-line"><%= t('.no_matching_records_found') %></div>
<% end %>

<%= erp_datalist_pagination(@slideshows) %>
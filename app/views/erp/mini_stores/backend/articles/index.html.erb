<% content_for :title do %>
    <%= t('.articles') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-newspaper-o"></i> <%= t('.articles') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_mini_stores.new_backend_article_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_mini_stores.list_backend_articles_path,
    keywords: [
        {
            text: t('.name'), name: 'erp_mini_stores_articles.name'
        },
        {
            text: t('.article_category'),
            name: 'erp_mini_stores_article_categories.name',
            select: {
                name: 'erp_mini_stores_article_categories.id',
                data_url: erp_mini_stores.dataselect_backend_article_categories_path
            }
        },
        {
            text: t('creator'),
            name: 'erp_users.name',
            select: {
                name: 'erp_users.id',
                data_url: erp.dataselect_backend_users_path
            }
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-ban"></i> '+t('archive'),
            url: erp_mini_stores.archive_all_backend_articles_path,
            data_method: 'PUT',
            data_confirm: t('.archive_confirm')
        },
        {
            text: '<i class="fa fa-check"></i> '+t('unarchive'),
            url: erp_mini_stores.unarchive_all_backend_articles_path,
            data_method: 'PUT',
            data_confirm: t('.unarchive_confirm')
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-trash"></i> '+t('.delete'),
            url: erp_mini_stores.delete_all_backend_articles_path,
            data_method: 'DELETE',
            data_confirm: t('delete_confirm')
        }
    ],
    filters: [
        {
            text: t('archived'), name: 'show_archived', value: true, checked: false
        },
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('.article_category'), name: 'article_category', value: true, checked: true
        },
        {
            text: t('status'), name: 'status', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: false
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: false
        }
    ],
    sort: { sort_by: 'erp_mini_stores_articles.created_at', sort_direction: 'desc' }
) %>
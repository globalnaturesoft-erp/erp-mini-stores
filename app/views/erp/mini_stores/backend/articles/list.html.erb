<table class="table table-advance table-hover table-striped table-checkable order-column">
    <thead>
        <tr>
            <th width='1%'>
                <%= erp_datalist_check_all %>
            </th>
            <% if get_columns(params).include?("name") %>
                <th class="sortable" sort-by='erp_mini_stores_articles.name'>
                    <%= t('.name') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("status") %>
                <th>
                    <%= t('status') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("creator") %>
                <th>
                    <%= t('creator') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("created_at") %>
                <th class="sortable" sort-by='erp_mini_stores_articles.created_at'>
                    <%= t('created_at') %>
                </th>
            <% end %>
            <th width="7%"><%= t('actions') %></th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
            <tr class="odd gradeX">
                <td>
                    <%= erp_datalist_check_row(id: article.id) %>
                </td>
                <% if get_columns(params).include?("name") %>
                    <td><%= link_to article.name, erp_mini_stores.edit_backend_article_path(article), class: 'title' %></td>
                <% end %>
                <% if get_columns(params).include?("product_count") %>
                    <td><%= article.product_count %></td>
                <% end %>
                <% if get_columns(params).include?("status") %>
                <td>
                    <% if article.archived == true %>
                        <%= erp_component('label/danger', {
                            text: t('archived')
                        }) %>
                    <% else %>
                        <%= erp_component('label/success', {
                            text: t('active')
                        }) %>
                    <% end %>
                </td>
                <% end %>
                <% if get_columns(params).include?("creator") %>
                    <td>
                        <%= erp_component('avatar', {
                            user: article.creator
                        }) %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("created_at") %>
                    <td><%= article.created_at.strftime("%d/%m/%Y") %></td>
                <% end %>
                <td class="text-right">
                    <%= erp_datalist_row_actions(
                        [
                            {
                                text: '<i class="fa fa-edit"></i> '+t('edit'),
                                href: erp_mini_stores.edit_backend_article_path(article)
                            },
                            {
                                text: '<i class="fa fa-eye-slash"></i> '+t('archive'),
                                url: erp_mini_stores.archive_backend_articles_path(id: article),
                                data_method: 'PUT',
                                hide: article.archived,
                                class: 'ajax-link'
                            },
                            {
                                text: '<i class="fa fa-eye"></i> '+t('unarchive'),
                                url: erp_mini_stores.unarchive_backend_articles_path(id: article),
                                data_method: 'PUT',
                                hide: !article.archived,
                                class: 'ajax-link'
                            },
                            {
                                divider: true
                            },
                            {
                                text: '<i class="fa fa-trash"></i> '+t('.delete'),
                                url: erp_mini_stores.backend_article_path(article),
                                data_method: 'DELETE',
                                class: 'ajax-link',
                                data_confirm: t('delete_confirm')
                            }
                        ]
                    ) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
<% if @articles.empty? %>
    <div class="datalist-empty-line"><%= t('.no_matching_records_found') %></div>
<% end %>

<%= erp_datalist_pagination(@articles) %>